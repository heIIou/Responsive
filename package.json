{
  "name": "base_build",
  "version": "1.0.0",
  "description": "base_build",
  "main": "src/index.js",
  "scripts": {
    "start": "webpack-dev-server --mode development --config webpack.dev.js --content-base src --hot --inline",
    "watch": "webpack --watch --colors --mode development --config webpack.dev.js",
    "build": "webpack --mode production --config webpack.prod.js",
    "build-dev": "webpack --mode development --config webpack.dev.js",
    "start:dev": "webpack-dev-server",
    "precommit": "lint-staged",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint ./src/**/*.scss --syntax scss",
    "lint:js": "eslint ./*.js ./src --ext .js"
  },
  "author": "Witcher",
  "license": "",
  "lint-staged": {
    "*.{css,scss}": [
      "stylelint --syntax scss --fix",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {  
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/core": "~7.1.6",
    "@babel/plugin-proposal-class-properties": "~7.1.0",
    "@babel/plugin-proposal-decorators": "~7.1.6",
    "@babel/preset-env": "~7.1.6",
    "autoprefixer": "~9.3.1",
    "babel-eslint": "~10.0.1",
    "babel-loader": "~8.0.4",
    "browser-sync": "~2.26.3",
    "browser-sync-webpack-plugin": "~2.2.2",
    "css-loader": "~1.0.1",
    "eslint": "~5.9.0",
    "eslint-loader": "~2.1.1",
    "file-loader": "~2.0.0",
    "html-webpack-plugin": "~3.2.0",
    "husky": "~1.1.4",
    "lint-staged": "~8.0.5",
    "mini-css-extract-plugin": "~0.4.4",
    "node-sass": "~4.10.0",
    "optimize-css-assets-webpack-plugin": "~5.0.1",
    "postcss-loader": "~3.0.0",
    "prettier": "~1.15.2",
    "prettier-stylelint": "~0.4.2",
    "sass-loader": "~7.1.0",
    "style-loader": "~0.23.1",
    "stylelint": "~9.8.0",
    "stylelint-config-standard": "~18.2.0",
    "uglifyjs-webpack-plugin": "~2.0.1",
    "webpack": "~4.25.1",
    "webpack-build-notifier": "~0.1.30",
    "webpack-cli": "~3.1.2",
    "webpack-dev-server": "~3.1.10",
    "webpack-merge": "~4.1.4"
  },
  "dependencies": {
    "babel-polyfill": "~6.26.0"
  }
}
